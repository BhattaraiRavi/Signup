				<td style="word-wrap: break-word"> <%= event.title %> </td>
				<td> <%= event.fromdate.to_time.strftime('%D') %> </td>
				<% if event.todate != nil %>
					<td> <%= event.todate.to_time.strftime('%D') %> </td>
				<% else %>
					<td> <%= "N/A" %> </td>
				<% end %>
				<% if event.description != nil %>
					<td style="word-wrap: break-word"> <%= event.description %> </td>
				<% else %>
					<td> <%= "N/A" %> </td>
				<% end %>
				<td>
					<div class="col-md-4 column">
					<%= link_to 'Show', event_path(event) %>
					</div>
					<% if admin_signed_in?%>
						<div class="col-md-4 column">
						<%= link_to 'Edit', edit_event_path(event) %>
						</div>
						<div class="col-md-4 column">
						<%= link_to 'Delete', event_path(event), method: :delete %>
						</div>
					<% end %>
				</td>
			</tr>
			<% end %>
			<% end %>

		</table>
	</div>
<br>
<% if admin_signed_in?%>
	<div class="col-md-2 column">
    	<button onclick = "location.href='/events/new';" class="btn btn-primary" type="button">
    	Create New Event
    	</button>
<% end %>
	</div>
	</div>
</div>