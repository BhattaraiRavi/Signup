<!DOCTYPE html>
<html>
  <head>
    <title>Signup</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  		<% if flash[:notice] %>
  			<p style="color: green">
  			<%= flash[:notice] %>
  			</p>
  		<% end %>
  	<% if flash[:alert] %>
  		<p style="color: red">
  		<%= flash[:alert] %>
  		</p>
  	<% end %>


    <%= yield %>
  </body>
</html>
