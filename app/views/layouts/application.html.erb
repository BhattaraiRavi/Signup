<!DOCTYPE html>
<html>
  <head>
    <title>Signup</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="row clearfix well">
      <div class="col-md-12 column">
        <%= link_to 'Home', root_path, :class=>"btn btn-primary", :style=>"float: left"%>
        <div class="col-md-2 column">
          <%= link_to 'Events', events_path, :class=>"btn btn-primary", :style=>"float: left"%>
        </div>
       		<% if admin_signed_in? %>
            <%= link_to 'Logout', destroy_admin_session_path, method: :delete , :class=>"btn btn-primary", :style=>"float: right"%>
          <% else %>
            <%= link_to 'Sign In', new_admin_session_path, :class=>"btn btn-primary" , :style=>"float: right"%>
          <% end %>
        </div>
      </div>          

      <% if flash[:notice] %>
  			<p style="color: green">
  			<%= flash[:notice] %>
  			</p>
  		<% end %>
  	<% if flash[:alert] %>
  		<p style="color: red">
  		<%= flash[:alert] %>
  		</p>
  	<% end %>
  </div>

    <%= yield %>
  </body>
</html>
